<Game>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.question
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: root.A
                on_press: root.check("A")
            Button:
                text: root.B
                on_press: root.check("B")
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: root.C
                on_press: root.check("C")
            Button:
                text: root.D
                on_press: root.check("D")

<GameOverScreen@Screen>:
    Label:
        text: "You WIN"

<MetaGame>:
    id: metagame
    game: game
    game_over_screen: game_over_screen
    Game:
        id: game
        name: "game"
        manager: metagame
    GameOverScreen:
        id: game_over_screen
        name: "game_over_screen"
        manager: metagame